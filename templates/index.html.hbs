<!DOCTYPE html>
<html lang="en">
{{> partials/head }}
<body>

    {{> partials/navbar }}

    <div class="container">
        <h1 class="text-center">
            {{ title }}
        </h1>
        <div id="container" class="container text-center aling-center p-2">

            <button id="btn-click" class="btn btn-primary p-2">
                click me
            </button>

            <h3 class="p-2"> 
                Count: <small id='elem'> 0 </small>     
            </h3>
        </div>
    </div>


<script>
    const button = document.querySelector('#btn-click');
    
    const container = document.querySelector('#container');
    let count = 0; 
    button.addEventListener('click', () => {
        const elem = document.querySelector('#elem')
        count++ 
        elem.textContent = count
    })
</script>

</body>
</html>

